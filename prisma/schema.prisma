generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Products {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String?
  brand        String?
  category     String?
  price        Float
  currency     String?
  stock        Int
  ean          Int
  color        String?
  size         String?
  availability String?
  internal_id  Int

  @@map("products")
}

model Customers {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  customer_id       String
  first_name        String
  last_name         String
  company           String?
  city              String?
  country           String?
  phone1            String?
  phone2            String?
  email             String
  subscription_date String?
  website           String?

  @@map("customers")
}
