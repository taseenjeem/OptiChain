generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Products {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  price        Float?
  currency     String?
  stock        Int?
  order_status String?
  order_date   String?
  createdAt    DateTime? @default(now())
  updatedAt    DateTime? @default(now())

  @@map("products")
}

model Customers {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  customer_id      String?
  first_name       String?
  last_name        String?
  supplier_company String?
  phone            String?
  email            String?
  createdAt        DateTime? @default(now())
  updatedAt        DateTime? @default(now())

  @@map("customers")
}

model Orders {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  supplier_company String?
  email            String?
  phone            String?
  product_name     String?
  qty              Int?
  status           String?   @default("pending")
  createdAt        DateTime? @default(now())
  updatedAt        DateTime? @default(now())

  @@map("orders")
}
