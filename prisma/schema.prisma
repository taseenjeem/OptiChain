generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String?
  brand        String?
  category     String?
  price        Float
  currency     String?
  stock        Int
  ean          String?
  color        String?
  size         String?
  availability String?
  internal_id  String? @map("internal_id")

  @@map("products")
}

model Customer {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  customer_id       String    @unique @map("customer_id")
  first_name        String    @map("first_name")
  last_name         String    @map("last_name")
  company           String?
  city              String?
  country           String?
  phone1            String?   @map("phone1")
  phone2            String?   @map("phone2")
  email             String    @unique
  subscription_date DateTime? @map("subscription_date")
  website           String?

  @@map("customers")
}
